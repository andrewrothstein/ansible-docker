[Unit]
After=network.target
{% if docker_flannel_integration %}
After=flanneld.service
{% endif %}
[Service]
{% if proxy_env is defined and proxy_env.http_proxy is defined %}
Environment=http_proxy={{ proxy_env.http_proxy }}
Environment=https_proxy={{ proxy_env.https_proxy }}
Environment=no_proxy={{ proxy_env.no_proxy }}
Environment=HTTP_PROXY={{ proxy_env.http_proxy }}
Environment=HTTPS_PROXY={{ proxy_env.https_proxy }}
Environment=NO_PROXY={{ proxy_env.no_proxy }}
{% endif %}
{% if docker_flannel_integration %}
EnvironmentFile=-{{ docker_flannel_run_config }}
{% endif %}
ExecStart=
ExecStart=/usr/bin/dockerd {{ docker_opts }} {% if docker_flannel_integration %} --bip=${FLANNEL_SUBNET} --mtu=${FLANNEL_MTU} {% endif %}
